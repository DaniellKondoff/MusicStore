@model AlbumAddingSongViewModel
@{
    ViewData["Title"] = $"AddSongTo {Model.Title}";
}
<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div><input asp-for="Id" type="hidden" /></div>
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" disabled />
            </div>
            <div class="form-group">
                <label asp-for="SongId"></label>
                <select asp-for="SongId" asp-items="Model.Songs" class="form-control"></select>
                <span asp-validation-for="SongId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}