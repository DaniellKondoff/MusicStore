@model AdminAlbumDetailsServiceModel
@{
    ViewData["Title"] = $"Album {Model.Title} By {Model.Artist}";
}

<h2>
    @ViewData["Title"]
    <a class="btn btn-primary" asp-action="AddSongTo" asp-route-id="@Model.Id">Add Song To Album</a>
</h2>

@if (Model.Songs.Count() != 0)
{
    <ol>
        @foreach (var song in Model.Songs)
        {
            <li>@song - @Model.Artist</li>
        }
    </ol>

}
else
{
    <h4>Currenty there is no songs in that Album</h4>
}