@model SongFormViewModel
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Duration"></label>
        (in minutes)<input asp-for="Duration" type="number" min="0" step="0.1" class="form-control" />
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        $<input asp-for="Price" type="number" min="0" step="0.5" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ArtistId"></label>
        <select asp-for="ArtistId" asp-items="Model.Artists" class="form-control"></select>
        <span asp-validation-for="ArtistId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Ganre"></label>
        <select asp-for="Ganre" asp-items="Html.GetEnumSelectList<Ganre>()" class="form-control"></select>
        <span asp-validation-for="Ganre" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-default">Save</button>
</form>